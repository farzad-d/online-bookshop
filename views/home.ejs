    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav mx-auto">
        <li class="nav-item">
          <a class="nav-link category-link" href="/category/Fiction">Fiction</a>
        </li>
        <li class="nav-item">
          <a class="nav-link category-link" href="/category/Mystery">Mystery</a>
        </li>
        <li class="nav-item">
          <a class="nav-link category-link" href="/category/Thriller"
            >Thriller</a
          >
        </li>
        <li class="nav-item">
          <a class="nav-link category-link" href="/category/Classic">Classic</a>
        </li>
        <li class="nav-item">
          <a class="nav-link category-link" href="/category/Romance">Romance</a>
        </li>
        <li class="nav-item">
          <a class="nav-link category-link" href="/category/Fantasy">Fantasy</a>
